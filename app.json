{
  "expo": {
    "name": "QuranAppExpo",
    "slug": "QuranAppExpo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "statusBar": {
      "style": "light",
      "backgroundColor": "#1a237e",
      "hidden": true,
      "translucent": true
    },
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "cover",
      "backgroundColor": "#1a237e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "statusBar": {
        "style": "light",
        "backgroundColor": "#1a237e",
        "hidden": true,
        "translucent": true
      },
      "splash": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "cover",
        "backgroundColor": "#1a237e"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a237e"
      },
      "statusBar": {
        "style": "light",
        "backgroundColor": "#1a237e",
        "hidden": true,
        "translucent": true
      },
      "splash": {
        "image": "./assets/splash-icon.png",
        "resizeMode": "cover",
        "backgroundColor": "#1a237e"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.QuranAppExpo",
      "softwareKeyboardLayoutMode": "pan",
      "splashScreen": {
        "resizeMode": "cover",
        "backgroundColor": "#1a237e"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-font"
    ]
  }
}
